{
  "name": "italia-pagopa-api",
  "version": "2.1.0",
  "description": "Client and server for interacting with pagoPA",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/teamdigitale/italia-pagopa-api",
  "author": "Federico Feroldi <federico@teamdigitale.governo.it>",
  "license": "SEE LICENSE IN LICENSE",
  "scripts": {
    "prepublish": "npm run build",
    "build": "tsc -p . && cp -r wsdl dist",
    "postversion": "git push && git push --tags",
    "test": "jest"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.20",
    "@types/jest": "^23.0.0",
    "@types/node": "^8.9.4",
    "@types/soap": "^0.21.0",
    "danger": "^3.7.15",
    "danger-plugin-digitalcitizenship": "^0.3.1",
    "italia-utils": "^3.11.1",
    "jest": "^23.1.0",
    "jest-xml-matcher": "^1.1.1",
    "npm-parallel": "^2.0.1",
    "ts-jest": "^23.0.0",
    "typescript": "^2.9.2",
    "wsdl-to-ts": "^0.1.3"
  },
  "dependencies": {
    "io-ts": "^1.1.5",
    "italia-ts-commons": "^5.1.13",
    "soap": "^0.24.0"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverage": true
  }
}
